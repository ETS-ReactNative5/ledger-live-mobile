{
  "name": "ledgerconnect-extension",
  "version": "0.0.1",
  "private": true,
  "description": "Ledger Connect browser extension for Safari",
  "source": [
    "src/content/index.tsx",
    "src/background.ts",
    "src/wallet-connection/ethereum/index.ts",
    "src/wallet-connection/solana/index.ts"
  ],
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "build": "rm -rf dist && tsc && parcel build",
    "build:dev": "rm -rf dist && tsc && parcel build --no-optimize --no-cache",
    "lint": "eslint . --ext .js,.ts",
    "watch": "parcel watch --no-hmr",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.4.0",
    "@parcel/transformer-svg-react": "2.3.2",
    "@types/firefox-webext-browser": "94.0.1",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.41",
    "@types/react-alert": "5.2.1",
    "@types/react-dom": "17.0.14",
    "@types/styled-components": "5.1.24",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "eslint": "8.11.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "jest": "27.5.1",
    "jsdom": "19.0.0",
    "nyc": "15.1.0",
    "prettier": "2.6.0",
    "ts-jest": "^27.1.3",
    "typescript": "4.6.2"
  },
  "dependencies": {
    "@sentry/react": "^6.19.6",
    "@sentry/tracing": "^6.19.6",
    "@solana/wallet-adapter-base": "^0.9.5",
    "@solana/web3.js": "^1.37.0",
    "assert": "2.0.0",
    "base58-js": "^1.0.0",
    "buffer": "5.6.0",
    "eth-sig-util": "3.0.1",
    "ethereumjs-units": "0.2.0",
    "ethereumjs-util": "7.1.4",
    "events": "3.2.0",
    "isutf8": "3.1.1",
    "parcel": "2.2.1",
    "react": "17.0.2",
    "react-alert": "7.0.3",
    "react-alert-template-basic": "^1.0.2",
    "react-dom": "17.0.2",
    "shallow-equal-object": "1.1.1",
    "stream": "0.0.2",
    "styled-components": "5.3.3",
    "uuid": "8.3.2",
    "web3": "1.7.0"
  }
}
